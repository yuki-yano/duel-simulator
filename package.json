{
  "name": "duel-simulator",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "vite build --mode client && vite build",
    "preview": "wrangler pages dev",
    "deploy": "vite build --mode client && vite build && wrangler pages deploy dist",
    "dev:client": "vite --mode client",
    "dev:server": "wrangler dev src/server/index.ts",
    "wrangler": "wrangler",
    "db:create": "wrangler d1 create duel-simulator",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:migrate": "wrangler d1 migrations apply duel-simulator --local",
    "db:migrate:remote": "wrangler d1 migrations apply duel-simulator --remote",
    "db:migrate:latest": "tsx scripts/migrate.ts",
    "r2:create": "wrangler r2 bucket create duel-simulator-images",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit"
  },
  "author": "Yuki Yano",
  "license": "MIT",
  "packageManager": "pnpm@10.12.4",
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-icons": "^1.3.2",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-tooltip": "^1.2.7",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.44.2",
    "hono": "^4.8.4",
    "jotai": "^2.12.5",
    "lucide-react": "^0.525.0",
    "nanoid": "^5.1.5",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3",
    "tailwind-merge": "^3.3.1",
    "tesseract.js": "^6.0.1",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250705.0",
    "@eslint/js": "^9.30.1",
    "@hono/vite-cloudflare-pages": "^0.4.2",
    "@hono/vite-dev-server": "^0.20.0",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.21",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^7.0.2",
    "wrangler": "^4.24.0"
  }
}
